.product-list-mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.product-list-mask .product-list-content {
  width: 100%;
  background: #fff;
  position: absolute;
  bottom: 96rpx;
  border-radius: 25rpx 25rpx 0 0;
  padding: 44rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}
.product-list-mask .product-list-content.customTabBar {
  bottom: 194rpx;
}
.product-list-mask .funList {
  padding-bottom: 36rpx;
}
.product-list-mask .funList .funList-l {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.product-list-mask .funList .funList-r {
  font-size: 30rpx;
  color: #999999;
}
.product-list-mask .product-item {
  height: 164rpx;
  padding-bottom: 23rpx;
}
.product-list-mask .product-item:last-child {
  padding-bottom: 0;
}
.product-list-mask .product-item .mask-product-img {
  width: 164rpx;
  height: 100%;
  margin-right: 20rpx;
}
.product-list-mask .product-item .mask-t {
  font-size: 22rpx;
  color: #999999;
  width: 100%;
}
.product-list-mask .product-item .mask-t .mask-product-title {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 12rpx;
}
.product-list-mask .product-item .mask-t .mask-product-title .iconfont {
  font-size: 48rpx;
}
.product-list-mask .product-item .mask-b {
  width: 100%;
}
.product-list-mask .product-item .img {
  width: 100%;
  height: 100%;
}
.product-list-mask .product-item .mask-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #e22319;
}
.product-list-mask .product-item .mask-action {
  width: 168rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #EEEEEE;
  border-radius: 40rpx;
}
.product-list-mask .product-item .mask-action view {
  flex: 1;
  text-align: center;
  height: 100%;
}
.product-list-mask .product-item .mask-action .mask-minus .iconfont, .product-list-mask .product-item .mask-action .mask-add .iconfont {
  color: #666666;
  font-size: 24rpx;
}
.product-list-mask .product-item .mask-action .mask-minus {
  border-right: 1px solid #EEEEEE;
}
.product-list-mask .product-item .mask-action .mask-add {
  border-left: 1px solid #EEEEEE;
  border-left: 1px solid #EEEEEE;
}